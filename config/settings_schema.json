[
  {
    "name": "theme_info",
    "theme_name": "Angel Hair",
    "theme_version": "1.0.0",
    "theme_author": "Custom Built",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "default": "#C9A962",
        "info": "Main brand color (gold)"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color",
        "default": "#2C2C2C",
        "info": "Secondary brand color"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#E8D5A3",
        "info": "Accent highlights"
      },
      {
        "type": "header",
        "content": "Background & Text"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#FEFEFE"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#2C2C2C"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border Color",
        "default": "#E5E5E5"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "playfair_display_n4",
        "label": "Heading Font",
        "info": "Elegant font for headings"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "lato_n4",
        "label": "Body Font",
        "info": "Clean font for body text"
      },
      {
        "type": "range",
        "id": "type_body_font_size",
        "min": 12,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base Font Size",
        "default": 16
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 150,
        "unit": "px",
        "label": "Logo Width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32 x 32px .png recommended"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Links"
      },
      {
        "type": "text",
        "id": "social_instagram",
        "label": "Instagram URL",
        "default": "https://www.instagram.com/angel_hair.1/"
      },
      {
        "type": "text",
        "id": "social_tiktok",
        "label": "TikTok URL",
        "default": "https://www.tiktok.com/@angelhair2220gmail.com"
      },
      {
        "type": "text",
        "id": "social_facebook",
        "label": "Facebook URL"
      }
    ]
  },
  {
    "name": "WhatsApp",
    "settings": [
      {
        "type": "checkbox",
        "id": "whatsapp_enabled",
        "label": "Enable WhatsApp Button",
        "default": true
      },
      {
        "type": "text",
        "id": "whatsapp_number",
        "label": "WhatsApp Number",
        "default": "19548536724",
        "info": "Include country code without + or spaces"
      },
      {
        "type": "text",
        "id": "whatsapp_message",
        "label": "Default Message",
        "default": "Hi! I'm interested in Angel Hair products."
      },
      {
        "type": "text",
        "id": "whatsapp_tooltip",
        "label": "Tooltip Text",
        "default": "Chat with us!",
        "info": "Text shown when hovering the button"
      },
      {
        "type": "checkbox",
        "id": "whatsapp_show_badge",
        "label": "Show Notification Badge",
        "default": true,
        "info": "Shows a red badge to attract attention"
      }
    ]
  },
  {
    "name": "Meta Pixel",
    "settings": [
      {
        "type": "text",
        "id": "meta_pixel_id",
        "label": "Meta Pixel ID",
        "info": "Enter your Facebook/Meta Pixel ID for tracking"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer",
        "label": "Cart Type"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show Vendor",
        "default": false
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable Predictive Search",
        "default": true
      }
    ]
  }
]

