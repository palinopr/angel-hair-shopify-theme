{%- style -%}
  .customer-section {
    padding: 80px 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-cream);
  }

  .customer-form {
    width: 100%;
    max-width: 440px;
    padding: 48px;
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .customer-form__title {
    font-family: var(--font-heading-family);
    font-size: 2rem;
    font-weight: 400;
    text-align: center;
    margin-bottom: 16px;
    color: var(--color-text);
  }

  .customer-form__desc {
    text-align: center;
    color: var(--color-text-light);
    margin-bottom: 32px;
  }

  .customer-form__field {
    margin-bottom: 20px;
  }

  .customer-form__label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 8px;
    color: var(--color-text);
  }

  .customer-form__input {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-family: inherit;
    transition: border-color var(--transition-fast);
  }

  .customer-form__input:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  .customer-form__submit {
    width: 100%;
    padding: 16px;
    margin-top: 8px;
  }

  .customer-form__footer {
    text-align: center;
    margin-top: 24px;
  }

  .customer-form__footer a {
    color: var(--color-gold);
    text-decoration: none;
    font-weight: 500;
  }

  .customer-form__footer a:hover {
    text-decoration: underline;
  }
{%- endstyle -%}

<section class="customer-section">
  <div class="customer-form" data-animate>
    <h1 class="customer-form__title">Reset Password</h1>
    <p class="customer-form__desc">Enter your email and we'll send you a reset link.</p>

    {%- form 'recover_customer_password' -%}
      {%- if form.posted_successfully? -%}
        <p style="text-align: center; color: #4caf50; margin-bottom: 20px;">
          We've sent you an email with a link to update your password.
        </p>
      {%- endif -%}

      <div class="customer-form__field">
        <label class="customer-form__label" for="RecoverEmail">
          Email
        </label>
        <input
          type="email"
          name="email"
          id="RecoverEmail"
          class="customer-form__input"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          required
        >
      </div>

      <button type="submit" class="btn btn--primary customer-form__submit">
        Send Reset Link
      </button>

      <div class="customer-form__footer">
        <a href="{{ routes.account_login_url }}">‚Üê Back to login</a>
      </div>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Reset Password",
  "settings": []
}
{% endschema %}

