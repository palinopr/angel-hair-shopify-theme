{% comment %}
  Angel Hair Theme - Related Products Section
  Premium Swiper carousel for upselling
{% endcomment %}

<style>
  .related-products {
    padding: var(--spacing-xxl) 0;
    background: linear-gradient(180deg, #faf9f7 0%, white 100%);
    overflow: hidden;
  }

  .related-products__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .related-products__header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .related-products__subtitle {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .related-products__title {
    font-family: var(--font-heading-family);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  @media (max-width: 640px) {
    .related-products__title {
      font-size: 1.5rem;
    }
  }

  .related-products__description {
    color: var(--color-text-light);
    font-size: 1rem;
  }

  .related-products__carousel {
    position: relative;
    margin: 0 -var(--spacing-lg);
    padding: 0 var(--spacing-lg);
  }

  .related-products__carousel .swiper {
    overflow: visible;
    padding: var(--spacing-sm) 0 var(--spacing-lg);
  }

  .related-products__carousel .swiper-wrapper {
    align-items: stretch;
  }

  .related-products__carousel .swiper-slide {
    height: auto;
  }

  /* Navigation */
  .related-products__nav {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-top: var(--spacing-xl);
  }

  .related-products__nav-btn {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border: 2px solid var(--color-border);
    border-radius: 50%;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .related-products__nav-btn:hover:not(:disabled) {
    background: var(--color-gold);
    border-color: var(--color-gold);
    color: white;
  }

  .related-products__nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .related-products__nav-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Related Product Card */
  .related-product-card {
    position: relative;
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 2px 15px rgba(0,0,0,0.06);
    transition: all var(--transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .related-product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.12);
  }

  .related-product-card__badge {
    position: absolute;
    top: var(--spacing-sm);
    left: var(--spacing-sm);
    z-index: 2;
    padding: 0.375rem 0.75rem;
    font-size: 0.688rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-full);
    background: var(--color-gold);
    color: white;
  }

  .related-product-card__badge--sale {
    background: #e53935;
  }

  .related-product-card__image-wrap {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: linear-gradient(135deg, #faf9f7 0%, #f5f3f0 100%);
  }

  .related-product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .related-product-card:hover .related-product-card__image {
    transform: scale(1.08);
  }

  .related-product-card__quick-add {
    position: absolute;
    bottom: var(--spacing-md);
    left: var(--spacing-md);
    right: var(--spacing-md);
    opacity: 0;
    transform: translateY(10px);
    transition: all var(--transition-fast);
  }

  .related-product-card:hover .related-product-card__quick-add {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .related-product-card__quick-add {
      position: static;
      opacity: 1;
      transform: none;
      padding: 0 var(--spacing-md);
      margin-top: auto;
    }
  }

  .related-product-card__quick-add .button {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 0.813rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .related-product-card__content {
    padding: var(--spacing-md);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .related-product-card__vendor {
    font-size: 0.688rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gold);
    margin-bottom: 0.25rem;
  }

  .related-product-card__title {
    font-size: 0.938rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--color-text);
    margin-bottom: var(--spacing-xs);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .related-product-card__title a {
    color: inherit;
    text-decoration: none;
  }

  .related-product-card__title a:hover {
    color: var(--color-gold);
  }

  .related-product-card__rating {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    margin-bottom: var(--spacing-sm);
  }

  .related-product-card__rating-stars {
    display: flex;
    gap: 1px;
  }

  .related-product-card__rating-stars svg {
    width: 12px;
    height: 12px;
    fill: var(--color-gold);
  }

  .related-product-card__rating-count {
    font-size: 0.688rem;
    color: var(--color-text-light);
  }

  .related-product-card__price {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    margin-top: auto;
  }

  .related-product-card__price-current {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .related-product-card__price-compare {
    font-size: 0.875rem;
    color: var(--color-text-light);
    text-decoration: line-through;
  }

  /* View All Link */
  .related-products__view-all {
    text-align: center;
    margin-top: var(--spacing-xl);
  }

  .related-products__view-all .button {
    min-width: 200px;
  }
</style>

{%- if section.settings.product_list != blank or recommendations.products.size > 0 -%}
<section class="related-products" data-section-id="{{ section.id }}">
  <div class="related-products__container">
    <div class="related-products__header">
      {%- if section.settings.subtitle != blank -%}
        <p class="related-products__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
      <h2 class="related-products__title">{{ section.settings.title | default: 'You May Also Like' }}</h2>
      {%- if section.settings.description != blank -%}
        <p class="related-products__description">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    <div class="related-products__carousel">
      <div class="swiper related-products-swiper">
        <div class="swiper-wrapper">
          {%- if section.settings.product_list != blank -%}
            {%- for product in section.settings.product_list limit: 8 -%}
              <div class="swiper-slide">
                {% render 'related-product-card', product: product %}
              </div>
            {%- endfor -%}
          {%- else -%}
            {%- for product in recommendations.products limit: 8 -%}
              <div class="swiper-slide">
                {% render 'related-product-card', product: product %}
              </div>
            {%- endfor -%}
          {%- endif -%}
        </div>
      </div>
    </div>

    <div class="related-products__nav">
      <button class="related-products__nav-btn related-nav-prev" aria-label="Previous products">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button class="related-products__nav-btn related-nav-next" aria-label="Next products">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>

    {%- if section.settings.show_view_all and section.settings.view_all_collection != blank -%}
      <div class="related-products__view-all">
        <a href="{{ section.settings.view_all_collection.url }}" class="button button--secondary">
          View All Products
        </a>
      </div>
    {%- endif -%}
  </div>
</section>
{%- endif -%}

<script>
document.addEventListener('DOMContentLoaded', function() {
  if (typeof Swiper !== 'undefined') {
    new Swiper('.related-products-swiper', {
      slidesPerView: 1.2,
      spaceBetween: 16,
      navigation: {
        nextEl: '.related-nav-next',
        prevEl: '.related-nav-prev',
      },
      breakpoints: {
        480: {
          slidesPerView: 2,
          spaceBetween: 16
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 20
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 24
        }
      }
    });
  }
});
</script>

{% schema %}
{
  "name": "Related Products",
  "tag": "section",
  "class": "section-related-products",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Complete Your Routine"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "You May Also Like"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Pair with these products for best results"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Products",
      "info": "Leave empty to use Shopify recommendations"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "collection",
      "id": "view_all_collection",
      "label": "Collection for 'View All'"
    }
  ],
  "presets": [
    {
      "name": "Related Products"
    }
  ]
}
{% endschema %}
