{% comment %}
  Trust Badges Section
  Displays brand values and trust indicators
{% endcomment %}

<section class="trust-badges" id="trust-{{ section.id }}">
  <div class="trust-badges__container">
    {% if section.settings.title != blank %}
      <h2 class="trust-badges__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="trust-badges__grid">
      {% for block in section.blocks %}
        <div class="trust-badge" {{ block.shopify_attributes }}>
          <div class="trust-badge__icon">
            {% case block.settings.icon %}
              {% when 'shield' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  <path d="M9 12l2 2 4-4"></path>
                </svg>
              {% when 'leaf' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"></path>
                  <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"></path>
                </svg>
              {% when 'heart' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
              {% when 'star' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
              {% when 'check' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
              {% when 'droplet' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path>
                </svg>
              {% when 'award' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <circle cx="12" cy="8" r="7"></circle>
                  <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
                </svg>
              {% when 'truck' %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="1" y="3" width="15" height="13"></rect>
                  <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                  <circle cx="5.5" cy="18.5" r="2.5"></circle>
                  <circle cx="18.5" cy="18.5" r="2.5"></circle>
                </svg>
              {% else %}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
            {% endcase %}
          </div>
          
          <h3 class="trust-badge__heading">{{ block.settings.heading }}</h3>
          
          {% if block.settings.text != blank %}
            <p class="trust-badge__text">{{ block.settings.text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #trust-{{ section.id }} {
    --badge-icon-color: {{ section.settings.icon_color }};
    --badge-bg: {{ section.settings.background_color }};
  }
  
  .trust-badges {
    padding: 80px 20px;
    background: var(--badge-bg, #faf8f5);
  }
  
  .trust-badges__container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .trust-badges__title {
    text-align: center;
    font-family: var(--font-heading-family, 'Playfair Display', serif);
    font-size: clamp(28px, 5vw, 40px);
    margin: 0 0 48px;
    color: #1a1a1a;
  }
  
  .trust-badges__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 32px;
  }
  
  .trust-badge {
    text-align: center;
    padding: 32px 24px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .trust-badge:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }
  
  .trust-badge__icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 20px;
    background: linear-gradient(135deg, rgba(212, 165, 116, 0.1), rgba(201, 149, 108, 0.1));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .trust-badge__icon svg {
    width: 32px;
    height: 32px;
    color: var(--badge-icon-color, #d4a574);
  }
  
  .trust-badge__heading {
    font-family: var(--font-heading-family, 'Playfair Display', serif);
    font-size: 20px;
    font-weight: 600;
    margin: 0 0 12px;
    color: #1a1a1a;
  }
  
  .trust-badge__text {
    font-size: 14px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .trust-badges {
      padding: 60px 20px;
    }
    
    .trust-badges__grid {
      gap: 20px;
    }
    
    .trust-badge {
      padding: 24px 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Trust Badges",
  "tag": "section",
  "class": "section-trust-badges",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Why Choose Angel Hair?"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#d4a574"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#faf8f5"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "shield", "label": "Shield (Professional)" },
            { "value": "leaf", "label": "Leaf (Natural)" },
            { "value": "heart", "label": "Heart (Care)" },
            { "value": "star", "label": "Star (Quality)" },
            { "value": "check", "label": "Check (Verified)" },
            { "value": "droplet", "label": "Droplet (Hydration)" },
            { "value": "award", "label": "Award (Winner)" },
            { "value": "truck", "label": "Truck (Shipping)" }
          ],
          "default": "shield"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Professional Grade"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Salon-quality formulas trusted by stylists worldwide."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        {
          "type": "badge",
          "settings": {
            "icon": "shield",
            "heading": "Professional Grade",
            "text": "Salon-quality formulas trusted by stylists worldwide."
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "leaf",
            "heading": "Clean Ingredients",
            "text": "Free from harsh sulfates, parabens, and silicones."
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "droplet",
            "heading": "Amino Acid Technology",
            "text": "Advanced formulas that repair and strengthen from within."
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "heart",
            "heading": "Cruelty Free",
            "text": "Never tested on animals. Always kind to nature."
          }
        }
      ]
    }
  ]
}
{% endschema %}

