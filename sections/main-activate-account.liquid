{%- style -%}
  .customer-section {
    padding: 80px 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-cream);
  }

  .customer-form {
    width: 100%;
    max-width: 440px;
    padding: 48px;
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .customer-form__title {
    font-family: var(--font-heading-family);
    font-size: 2rem;
    font-weight: 400;
    text-align: center;
    margin-bottom: 16px;
    color: var(--color-text);
  }

  .customer-form__desc {
    text-align: center;
    color: var(--color-text-light);
    margin-bottom: 32px;
  }

  .customer-form__field {
    margin-bottom: 20px;
  }

  .customer-form__label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 8px;
    color: var(--color-text);
  }

  .customer-form__input {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-family: inherit;
    transition: border-color var(--transition-fast);
  }

  .customer-form__input:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  .customer-form__submit {
    width: 100%;
    padding: 16px;
    margin-top: 8px;
  }
{%- endstyle -%}

<section class="customer-section">
  <div class="customer-form" data-animate>
    <h1 class="customer-form__title">Activate Account</h1>
    <p class="customer-form__desc">Create your password to activate your account.</p>

    {%- form 'activate_customer_password' -%}
      {%- if form.errors -%}
        <div style="padding: 12px 16px; margin-bottom: 20px; background: #fef2f2; border: 1px solid #fee2e2; border-radius: 8px; color: #dc2626; font-size: 0.875rem;">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div class="customer-form__field">
        <label class="customer-form__label" for="Password">
          Password
        </label>
        <input
          type="password"
          name="customer[password]"
          id="Password"
          class="customer-form__input"
          autocomplete="new-password"
          required
        >
      </div>

      <div class="customer-form__field">
        <label class="customer-form__label" for="PasswordConfirm">
          Confirm Password
        </label>
        <input
          type="password"
          name="customer[password_confirmation]"
          id="PasswordConfirm"
          class="customer-form__input"
          autocomplete="new-password"
          required
        >
      </div>

      <button type="submit" class="btn btn--primary customer-form__submit">
        Activate Account
      </button>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Activate Account",
  "settings": []
}
{% endschema %}

