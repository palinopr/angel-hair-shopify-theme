{% comment %}
  Angel Hair Theme - Values Grid Section
{% endcomment %}

<style>
  .values-grid {
    padding: var(--spacing-xxl) 0;
    background: {{ section.settings.background_color }};
  }

  .values-grid__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .values-grid__header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .values-grid__subtitle {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .values-grid__title {
    margin-bottom: var(--spacing-sm);
  }

  .values-grid__items {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-lg);
  }

  @media (max-width: 1024px) {
    .values-grid__items {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .values-grid__items {
      grid-template-columns: 1fr;
    }
  }

  .value-card {
    text-align: center;
    padding: var(--spacing-xl);
    background: white;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
  }

  .value-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .value-card__icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--spacing-md);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-gold-light);
    border-radius: var(--radius-full);
    color: var(--color-gold);
  }

  .value-card__icon svg {
    width: 40px;
    height: 40px;
  }

  .value-card__title {
    font-family: var(--font-heading-family);
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .value-card__description {
    color: var(--color-text-light);
    font-size: 0.9375rem;
    line-height: 1.7;
  }
</style>

<section class="values-grid section" data-section-id="{{ section.id }}">
  <div class="values-grid__container">
    <header class="values-grid__header" data-animate="fade-up">
      {%- if section.settings.subtitle != blank -%}
        <span class="values-grid__subtitle">{{ section.settings.subtitle }}</span>
      {%- endif -%}
      
      {%- if section.settings.title != blank -%}
        <h2 class="values-grid__title">{{ section.settings.title }}</h2>
        <div class="divider"></div>
      {%- endif -%}
    </header>

    <div class="values-grid__items">
      {%- for block in section.blocks -%}
        <div class="value-card" data-animate="fade-up" style="animation-delay: {{ forloop.index | times: 100 }}ms;" {{ block.shopify_attributes }}>
          <div class="value-card__icon">
            {%- case block.settings.icon -%}
              {%- when 'quality' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {%- when 'sustainability' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  <path d="M9 12l2 2 4-4"/>
                </svg>
              {%- when 'innovation' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              {%- when 'care' -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                </svg>
              {%- else -%}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M12 16v-4M12 8h.01"/>
                </svg>
            {%- endcase -%}
          </div>
          <h3 class="value-card__title">{{ block.settings.title }}</h3>
          <p class="value-card__description">{{ block.settings.description }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Values Grid",
  "tag": "section",
  "class": "section-values",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "What We Stand For"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Values"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FEFEFE"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "quality", "label": "Quality (Star)" },
            { "value": "sustainability", "label": "Sustainability (Shield)" },
            { "value": "innovation", "label": "Innovation (Lightbulb)" },
            { "value": "care", "label": "Care (Heart)" },
            { "value": "default", "label": "Default (Info)" }
          ],
          "default": "quality"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Value Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Describe this value and why it matters to your brand."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Values Grid",
      "blocks": [
        {
          "type": "value",
          "settings": {
            "icon": "quality",
            "title": "Quality",
            "description": "We use only the finest ingredients in our formulations."
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "sustainability",
            "title": "Sustainability",
            "description": "Committed to eco-friendly practices."
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "innovation",
            "title": "Innovation",
            "description": "Constantly researching new formulas."
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "care",
            "title": "Care",
            "description": "Every hair type deserves special care."
          }
        }
      ]
    }
  ]
}
{% endschema %}

