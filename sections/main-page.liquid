{%- style -%}
  .main-page {
    padding: 60px 0;
    min-height: 50vh;
  }

  .main-page__container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .main-page__title {
    font-family: var(--font-heading-family);
    font-size: 2.5rem;
    font-weight: 400;
    text-align: center;
    margin-bottom: 40px;
    color: var(--color-text);
  }

  .main-page__content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  .main-page__content h2 {
    font-family: var(--font-heading-family);
    font-size: 1.75rem;
    font-weight: 400;
    margin: 40px 0 16px;
    color: var(--color-text);
  }

  .main-page__content h3 {
    font-family: var(--font-heading-family);
    font-size: 1.375rem;
    font-weight: 500;
    margin: 32px 0 12px;
    color: var(--color-text);
  }

  .main-page__content p {
    margin-bottom: 16px;
  }

  .main-page__content ul,
  .main-page__content ol {
    margin: 16px 0;
    padding-left: 24px;
  }

  .main-page__content li {
    margin-bottom: 8px;
  }

  .main-page__content a {
    color: var(--color-gold);
    text-decoration: underline;
  }

  .main-page__content a:hover {
    color: var(--color-primary);
  }

  .main-page__content img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: 24px 0;
  }

  .main-page__content blockquote {
    border-left: 4px solid var(--color-gold);
    padding-left: 24px;
    margin: 24px 0;
    font-style: italic;
    color: var(--color-text-light);
  }
{%- endstyle -%}

<section class="main-page">
  <div class="main-page__container" data-animate>
    <h1 class="main-page__title">{{ page.title }}</h1>
    <div class="main-page__content rte">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Content",
  "settings": []
}
{% endschema %}

