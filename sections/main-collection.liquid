{% comment %}
  Angel Hair Theme - Main Collection Section (Matching Store Design)
{% endcomment %}

<style>
  .collection-main {
    padding: var(--spacing-xl) 0 var(--spacing-xxl);
  }

  .collection-main__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    display: grid;
    grid-template-columns: 240px 1fr;
    gap: var(--spacing-xl);
  }

  @media (max-width: 1024px) {
    .collection-main__container {
      grid-template-columns: 1fr;
    }
  }

  /* Sidebar */
  .collection-sidebar {
    position: sticky;
    top: 120px;
    align-self: start;
  }

  @media (max-width: 1024px) {
    .collection-sidebar {
      position: static;
      display: none;
    }
  }

  .collection-sidebar__title {
    font-family: var(--font-heading-family);
    font-size: 28px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #1a1a1a;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 2px solid #1a1a1a;
  }

  .collection-sidebar__section-title {
    font-family: var(--font-heading-family);
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #1a1a1a;
    margin-bottom: 16px;
  }

  .collection-sidebar__categories {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .collection-sidebar__category {
    display: block;
    padding: 10px 16px;
    background: #e8e4df;
    color: #1a1a1a;
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .collection-sidebar__category:hover,
  .collection-sidebar__category.is-active {
    background: #1a1a1a;
    color: #fff;
  }

  /* Product Grid */
  .collection-products {
    min-width: 0;
  }

  .collection-products__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  @media (max-width: 1024px) {
    .collection-products__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .collection-products__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
  }

  @media (max-width: 480px) {
    .collection-products__grid {
      grid-template-columns: 1fr;
    }
  }

  .collection-products__empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--spacing-xxl);
  }

  /* Mobile Filters */
  .collection-mobile-filters {
    display: none;
    margin-bottom: 20px;
  }

  @media (max-width: 1024px) {
    .collection-mobile-filters {
      display: block;
    }
  }

  .collection-mobile-filters__title {
    font-family: var(--font-heading-family);
    font-size: 24px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #1a1a1a;
    margin-bottom: 16px;
  }

  .collection-mobile-filters__toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 14px 16px;
    background: #e8e4df;
    border: none;
    font-size: 14px;
    font-weight: 500;
    color: #1a1a1a;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .collection-mobile-filters__toggle svg {
    width: 20px;
    height: 20px;
    transition: transform 0.2s ease;
  }

  .collection-mobile-filters__toggle.is-open svg {
    transform: rotate(180deg);
  }

  .collection-mobile-filters__dropdown {
    display: none;
    background: #fff;
    border: 1px solid #e5e5e5;
    border-top: none;
  }

  .collection-mobile-filters__dropdown.is-open {
    display: block;
  }

  .collection-mobile-filters__link {
    display: block;
    padding: 12px 16px;
    color: #1a1a1a;
    font-size: 14px;
    text-decoration: none;
    border-bottom: 1px solid #f5f5f5;
  }

  .collection-mobile-filters__link:hover,
  .collection-mobile-filters__link.is-active {
    background: #f9f9f9;
    color: #666;
  }

  /* Pagination */
  .collection-pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 40px;
    grid-column: 1 / -1;
  }

  .collection-pagination__link {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 40px;
    height: 40px;
    padding: 0 12px;
    border: 1px solid #e5e5e5;
    color: #1a1a1a;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .collection-pagination__link:hover,
  .collection-pagination__link.is-current {
    background: #1a1a1a;
    border-color: #1a1a1a;
    color: #fff;
  }

  .collection-pagination__link.is-disabled {
    opacity: 0.4;
    pointer-events: none;
  }

  .collection-pagination__link svg {
    width: 18px;
    height: 18px;
  }
</style>

<section class="collection-main">
  <div class="collection-main__container">
    <!-- Sidebar -->
    <aside class="collection-sidebar">
      <h1 class="collection-sidebar__title">STORE</h1>
      
      <h2 class="collection-sidebar__section-title">Categories</h2>
      <nav class="collection-sidebar__categories">
        <a href="/collections/all" class="collection-sidebar__category {% if collection.handle == 'all' %}is-active{% endif %}">
          All
        </a>
        {%- for link in linklists.main-menu.links -%}
          {%- if link.url contains '/collections/' -%}
            <a href="{{ link.url }}" class="collection-sidebar__category {% if link.active %}is-active{% endif %}">
              {{ link.title }}
            </a>
          {%- endif -%}
        {%- endfor -%}
        
        {%- comment %} Fallback categories if no menu {% endcomment -%}
        {%- if linklists.main-menu.links.size == 0 -%}
          <a href="/collections/clarifying-shampoo" class="collection-sidebar__category">CLARIFYING-SHAMPOO</a>
          <a href="/collections/keratina" class="collection-sidebar__category">KERATINA</a>
          <a href="/collections/mask" class="collection-sidebar__category">MASK</a>
          <a href="/collections/conditioner" class="collection-sidebar__category">CONDITIONER</a>
          <a href="/collections/shampoo-post-care" class="collection-sidebar__category">SHAMPOO POST-CARE</a>
          <a href="/collections/serum" class="collection-sidebar__category">SERUM</a>
        {%- endif -%}
      </nav>
    </aside>

    <!-- Products -->
    <div class="collection-products">
      <!-- Mobile Filters -->
      <div class="collection-mobile-filters">
        <h1 class="collection-mobile-filters__title">STORE</h1>
        <button class="collection-mobile-filters__toggle" data-filter-toggle>
          <span>Categories</span>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </button>
        <div class="collection-mobile-filters__dropdown" data-filter-dropdown>
          <a href="/collections/all" class="collection-mobile-filters__link {% if collection.handle == 'all' %}is-active{% endif %}">All</a>
          {%- for link in linklists.main-menu.links -%}
            {%- if link.url contains '/collections/' -%}
              <a href="{{ link.url }}" class="collection-mobile-filters__link {% if link.active %}is-active{% endif %}">
                {{ link.title }}
              </a>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      {%- if collection.products.size > 0 -%}
        <div class="collection-products__grid">
          {%- paginate collection.products by section.settings.products_per_page -%}
            {%- for product in collection.products -%}
              {% render 'product-card', product: product, show_vendor: true, show_rating: true %}
            {%- endfor -%}

            {%- if paginate.pages > 1 -%}
              <nav class="collection-pagination">
                {%- if paginate.previous -%}
                  <a href="{{ paginate.previous.url }}" class="collection-pagination__link" aria-label="Previous page">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                  </a>
                {%- else -%}
                  <span class="collection-pagination__link is-disabled">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                  </span>
                {%- endif -%}

                {%- for part in paginate.parts -%}
                  {%- if part.is_link -%}
                    <a href="{{ part.url }}" class="collection-pagination__link">{{ part.title }}</a>
                  {%- else -%}
                    {%- if part.title == paginate.current_page -%}
                      <span class="collection-pagination__link is-current">{{ part.title }}</span>
                    {%- else -%}
                      <span class="collection-pagination__link">{{ part.title }}</span>
                    {%- endif -%}
                  {%- endif -%}
                {%- endfor -%}

                {%- if paginate.next -%}
                  <a href="{{ paginate.next.url }}" class="collection-pagination__link" aria-label="Next page">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                  </a>
                {%- else -%}
                  <span class="collection-pagination__link is-disabled">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                  </span>
                {%- endif -%}
              </nav>
            {%- endif -%}
          {%- endpaginate -%}
        </div>
      {%- else -%}
        <div class="collection-products__empty">
          <h2>No products found</h2>
          <p style="color: #666; margin: 16px 0 24px;">This collection doesn't have any products yet.</p>
          <a href="/collections/all" class="button button--primary">Browse All Products</a>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile filter toggle
    const filterToggle = document.querySelector('[data-filter-toggle]');
    const filterDropdown = document.querySelector('[data-filter-dropdown]');
    
    filterToggle?.addEventListener('click', function() {
      this.classList.toggle('is-open');
      filterDropdown?.classList.toggle('is-open');
    });
  });
</script>

{% schema %}
{
  "name": "Product Grid",
  "tag": "section",
  "class": "section-collection",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 6,
      "max": 24,
      "step": 3,
      "default": 9,
      "label": "Products Per Page"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Rating",
      "default": true
    }
  ]
}
{% endschema %}
