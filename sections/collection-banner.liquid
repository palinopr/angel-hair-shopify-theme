{% comment %}
  Angel Hair Theme - Collection Banner Section
{% endcomment %}

<style>
  .collection-banner {
    position: relative;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: var(--color-cream);
  }

  .collection-banner--has-image {
    min-height: 400px;
  }

  .collection-banner__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-banner__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
  }

  .collection-banner__content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--spacing-xl);
    max-width: 800px;
  }

  .collection-banner__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: var(--spacing-md);
    color: white;
  }

  .collection-banner:not(.collection-banner--has-image) .collection-banner__title {
    color: var(--color-text);
  }

  .collection-banner__description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    max-width: 600px;
    margin: 0 auto;
  }

  .collection-banner:not(.collection-banner--has-image) .collection-banner__description {
    color: var(--color-text-light);
  }
</style>

<section class="collection-banner {% if collection.image and section.settings.show_collection_image %}collection-banner--has-image{% endif %}">
  {%- if collection.image and section.settings.show_collection_image -%}
    <img 
      src="{{ collection.image | image_url: width: 1920 }}"
      srcset="{{ collection.image | image_url: width: 768 }} 768w,
              {{ collection.image | image_url: width: 1200 }} 1200w,
              {{ collection.image | image_url: width: 1920 }} 1920w"
      sizes="100vw"
      alt="{{ collection.image.alt | default: collection.title | escape }}"
      class="collection-banner__image"
      loading="eager"
    >
    <div class="collection-banner__overlay"></div>
  {%- endif -%}

  <div class="collection-banner__content">
    <h1 class="collection-banner__title">{{ collection.title }}</h1>
    
    {%- if collection.description != blank and section.settings.show_collection_description -%}
      <div class="collection-banner__description rte">
        {{ collection.description }}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Collection Banner",
  "tag": "section",
  "class": "section-collection-banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "label": "Show Collection Description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "Show Collection Image",
      "default": true
    }
  ]
}
{% endschema %}

