{% comment %}
  Angel Hair Theme - Premium Footer Section
  Full-featured footer with newsletter, social links, and multiple columns
{% endcomment %}

<style>
  .footer {
    background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
    padding: 0;
  }

  /* Newsletter Banner */
  .footer__newsletter-banner {
    background: linear-gradient(135deg, #d4a574 0%, #c49660 50%, #b8864c 100%);
    padding: 48px 24px;
    text-align: center;
  }

  .footer__newsletter-inner {
    max-width: 600px;
    margin: 0 auto;
  }

  .footer__newsletter-title {
    font-family: var(--font-heading-family);
    font-size: clamp(24px, 4vw, 32px);
    color: #fff;
    margin: 0 0 8px;
  }

  .footer__newsletter-text {
    color: rgba(255, 255, 255, 0.9);
    font-size: 15px;
    margin: 0 0 24px;
  }

  .footer__newsletter-form {
    display: flex;
    gap: 12px;
    max-width: 480px;
    margin: 0 auto;
  }

  @media (max-width: 540px) {
    .footer__newsletter-form {
      flex-direction: column;
    }
  }

  .footer__newsletter-input {
    flex: 1;
    padding: 16px 20px;
    border: none;
    border-radius: 50px;
    font-size: 15px;
    font-family: inherit;
    outline: none;
  }

  .footer__newsletter-input::placeholder {
    color: #999;
  }

  .footer__newsletter-btn {
    padding: 16px 32px;
    background: #1a1a1a;
    color: #fff;
    border: none;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .footer__newsletter-btn:hover {
    background: #333;
    transform: translateY(-2px);
  }

  .footer__newsletter-note {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.7);
    margin: 16px 0 0;
  }

  /* Main Footer */
  .footer__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 64px 24px 32px;
  }

  .footer__main {
    display: grid;
    grid-template-columns: 1.5fr repeat(3, 1fr);
    gap: 48px;
    padding-bottom: 48px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 1024px) {
    .footer__main {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }
  }

  @media (max-width: 640px) {
    .footer__main {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 32px;
    }
  }

  .footer__brand {
    max-width: 300px;
  }

  @media (max-width: 640px) {
    .footer__brand {
      max-width: 100%;
      margin: 0 auto;
    }
  }

  .footer__logo {
    margin-bottom: 20px;
  }

  .footer__logo img {
    max-height: 50px;
    width: auto;
    filter: brightness(0) invert(1);
  }

  .footer__logo-text {
    font-family: var(--font-heading-family);
    font-size: 1.75rem;
    font-weight: 600;
    color: #fff;
    letter-spacing: 0.15em;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  @media (max-width: 640px) {
    .footer__logo-text {
      justify-content: center;
    }
  }

  .footer__description {
    color: rgba(255, 255, 255, 0.6);
    font-size: 14px;
    line-height: 1.8;
    margin-bottom: 24px;
  }

  .footer__social {
    display: flex;
    gap: 12px;
  }

  @media (max-width: 640px) {
    .footer__social {
      justify-content: center;
    }
  }

  .footer__social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    color: #fff;
    transition: all 0.3s ease;
  }

  .footer__social-link:hover {
    background: #d4a574;
    color: #fff;
    transform: translateY(-3px);
  }

  .footer__social-link svg {
    width: 18px;
    height: 18px;
  }

  .footer__column {
    padding-top: 0;
  }

  .footer__title {
    font-family: var(--font-heading-family);
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 24px;
    color: #fff;
  }

  .footer__links {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .footer__link {
    color: rgba(255, 255, 255, 0.6);
    font-size: 14px;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .footer__link:hover {
    color: #d4a574;
    transform: translateX(4px);
  }

  @media (max-width: 640px) {
    .footer__link:hover {
      transform: none;
    }
  }

  .footer__contact-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 14px;
    margin-bottom: 16px;
  }

  @media (max-width: 640px) {
    .footer__contact-item {
      justify-content: center;
    }
  }

  .footer__contact-item svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    margin-top: 2px;
    color: #d4a574;
  }

  .footer__contact-item a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__contact-item a:hover {
    color: #d4a574;
  }

  /* Trust & Payment Section */
  .footer__trust {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 32px;
    padding: 32px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__trust-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.5);
    font-size: 13px;
  }

  .footer__trust-item svg {
    width: 20px;
    height: 20px;
    color: #d4a574;
  }

  .footer__payments {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .footer__payments svg {
    width: 40px;
    height: 26px;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .footer__payments svg:hover {
    opacity: 1;
  }

  /* Bottom Bar */
  .footer__bottom {
    padding-top: 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  @media (max-width: 640px) {
    .footer__bottom {
      flex-direction: column;
      text-align: center;
    }
  }

  .footer__copyright {
    color: rgba(255, 255, 255, 0.4);
    font-size: 13px;
  }

  .footer__copyright a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__copyright a:hover {
    color: #d4a574;
  }

  .footer__legal {
    display: flex;
    gap: 24px;
  }

  .footer__legal a {
    color: rgba(255, 255, 255, 0.4);
    font-size: 12px;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__legal a:hover {
    color: #d4a574;
  }
</style>

