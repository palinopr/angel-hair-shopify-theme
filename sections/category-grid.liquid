{% comment %}
  Shop by Category Grid
  Visual category navigation with images
{% endcomment %}

<section class="category-grid" id="category-{{ section.id }}">
  <div class="category-grid__container">
    {% if section.settings.title != blank %}
      <div class="category-grid__header">
        <h2 class="category-grid__title">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <p class="category-grid__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="category-grid__items columns-{{ section.blocks.size | at_most: 4 }}">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="category-card" {{ block.shopify_attributes }}>
          <div class="category-card__image">
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
              >
            {% else %}
              <div class="category-card__placeholder">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <circle cx="8.5" cy="8.5" r="1.5"></circle>
                  <polyline points="21 15 16 10 5 21"></polyline>
                </svg>
              </div>
            {% endif %}
            <div class="category-card__overlay"></div>
          </div>
          
          <div class="category-card__content">
            <h3 class="category-card__title">{{ block.settings.title }}</h3>
            {% if block.settings.product_count != blank %}
              <span class="category-card__count">{{ block.settings.product_count }} products</span>
            {% endif %}
            <span class="category-card__cta">
              Shop Now
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </span>
          </div>
        </a>
      {% endfor %}
    </div>
    
    {% if section.settings.show_view_all %}
      <div class="category-grid__footer">
        <a href="{{ section.settings.view_all_link }}" class="category-grid__view-all">
          View All Categories
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .category-grid {
    padding: 80px 20px;
    background: {{ section.settings.background_color }};
  }
  
  .category-grid__container {
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .category-grid__header {
    text-align: center;
    margin-bottom: 48px;
  }
  
  .category-grid__title {
    font-family: var(--font-heading-family, 'Playfair Display', serif);
    font-size: clamp(28px, 5vw, 42px);
    margin: 0 0 12px;
    color: #1a1a1a;
  }
  
  .category-grid__subtitle {
    font-size: 16px;
    color: #666;
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .category-grid__items {
    display: grid;
    gap: 24px;
  }
  
  .category-grid__items.columns-2 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .category-grid__items.columns-3 {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .category-grid__items.columns-4 {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .category-card {
    position: relative;
    display: block;
    text-decoration: none;
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 1;
    background: #f5f5f5;
  }
  
  .category-card__image {
    position: absolute;
    inset: 0;
  }
  
  .category-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .category-card:hover .category-card__image img {
    transform: scale(1.08);
  }
  
  .category-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #e8e8e8, #d5d5d5);
    color: #888;
  }
  
  .category-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 40%,
      rgba(0, 0, 0, 0.7) 100%
    );
    transition: opacity 0.3s ease;
  }
  
  .category-card:hover .category-card__overlay {
    opacity: 0.9;
  }
  
  .category-card__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;
    color: #fff;
    transform: translateY(10px);
    transition: transform 0.3s ease;
  }
  
  .category-card:hover .category-card__content {
    transform: translateY(0);
  }
  
  .category-card__title {
    font-family: var(--font-heading-family, 'Playfair Display', serif);
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 4px;
  }
  
  .category-card__count {
    font-size: 13px;
    opacity: 0.8;
    display: block;
    margin-bottom: 12px;
  }
  
  .category-card__cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }
  
  .category-card:hover .category-card__cta {
    opacity: 1;
    transform: translateY(0);
  }
  
  .category-card__cta svg {
    transition: transform 0.3s ease;
  }
  
  .category-card:hover .category-card__cta svg {
    transform: translateX(5px);
  }
  
  .category-grid__footer {
    text-align: center;
    margin-top: 40px;
  }
  
  .category-grid__view-all {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    border: 2px solid #1a1a1a;
    color: #1a1a1a;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 0.5px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }
  
  .category-grid__view-all:hover {
    background: #1a1a1a;
    color: #fff;
  }
  
  .category-grid__view-all svg {
    transition: transform 0.3s ease;
  }
  
  .category-grid__view-all:hover svg {
    transform: translateX(5px);
  }
  
  @media (max-width: 1024px) {
    .category-grid__items.columns-4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .category-grid {
      padding: 60px 20px;
    }
    
    .category-grid__items.columns-2,
    .category-grid__items.columns-3,
    .category-grid__items.columns-4 {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
    
    .category-card {
      aspect-ratio: 1;
    }
    
    .category-card__content {
      padding: 16px;
    }
    
    .category-card__title {
      font-size: 18px;
    }
    
    .category-card__cta {
      display: none;
    }
  }
</style>

