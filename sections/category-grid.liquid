        },
        {
          "type": "text",
          "id": "product_count",
          "label": "Product Count (optional)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Grid",
      "blocks": [
