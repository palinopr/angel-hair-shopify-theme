{% comment %}
  Instagram Feed / Social Proof Section
  Display user-generated content and encourage social engagement
{% endcomment %}

<style>
  .instagram-feed {
    padding: 80px 0;
    background: {{ section.settings.background_color }};
    overflow: hidden;
  }

  .instagram-feed__container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .instagram-feed__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .instagram-feed__badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(212, 165, 116, 0.1);
    border-radius: 30px;
    font-size: 13px;
    font-weight: 600;
    color: #d4a574;
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .instagram-feed__badge svg {
    width: 18px;
    height: 18px;
  }

  .instagram-feed__title {
    font-family: var(--font-heading-family);
    font-size: clamp(28px, 4vw, 40px);
    font-weight: 400;
    color: #1a1a1a;
    margin: 0 0 12px;
  }

  .instagram-feed__subtitle {
    font-size: 16px;
    color: #666;
    margin: 0 0 24px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .instagram-feed__handle {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: linear-gradient(135deg, #833ab4, #fd1d1d, #fcb045);
    color: #fff;
    font-size: 14px;
    font-weight: 600;
    border-radius: 30px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .instagram-feed__handle:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(131, 58, 180, 0.3);
  }

  .instagram-feed__handle svg {
    width: 20px;
    height: 20px;
  }

  /* Grid */
  .instagram-feed__grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 8px;
  }

  @media (max-width: 1024px) {
    .instagram-feed__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 640px) {
    .instagram-feed__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Grid Item */
  .instagram-feed__item {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 8px;
    background: #f5f5f5;
  }

  .instagram-feed__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .instagram-feed__item:hover img {
    transform: scale(1.1);
  }

  .instagram-feed__item-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .instagram-feed__item:hover .instagram-feed__item-overlay {
    opacity: 1;
  }

  .instagram-feed__item-icon {
    color: #fff;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 600;
  }

  .instagram-feed__item-icon svg {
    width: 24px;
    height: 24px;
  }

  /* Placeholder Items */
  .instagram-feed__placeholder {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 8px;
    background: linear-gradient(135deg, #f8f6f4 0%, #ebe7e3 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .instagram-feed__placeholder-icon {
    width: 40px;
    height: 40px;
    color: #d4a574;
    opacity: 0.5;
  }

  /* Stats Row */
  .instagram-feed__stats {
    display: flex;
    justify-content: center;
    gap: 48px;
    margin-top: 48px;
    padding-top: 32px;
    border-top: 1px solid #eee;
  }

  @media (max-width: 640px) {
    .instagram-feed__stats {
      gap: 24px;
      flex-wrap: wrap;
    }
  }

  .instagram-feed__stat {
    text-align: center;
  }

  .instagram-feed__stat-value {
    font-family: var(--font-heading-family);
    font-size: 32px;
    font-weight: 600;
    color: #1a1a1a;
    line-height: 1;
    margin-bottom: 4px;
  }

  .instagram-feed__stat-label {
    font-size: 13px;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* CTA Section */
  .instagram-feed__cta {
    text-align: center;
    margin-top: 40px;
  }

  .instagram-feed__cta-text {
    font-size: 15px;
    color: #666;
    margin-bottom: 16px;
  }

  .instagram-feed__cta-hashtag {
    font-size: 18px;
    font-weight: 600;
    color: #d4a574;
  }

  @media (max-width: 768px) {
    .instagram-feed {
      padding: 60px 0;
    }
  }
</style>

