{%- style -%}
  .customer-section {
    padding: 80px 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-cream);
  }

  .customer-form {
    width: 100%;
    max-width: 440px;
    padding: 48px;
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .customer-form__title {
    font-family: var(--font-heading-family);
    font-size: 2rem;
    font-weight: 400;
    text-align: center;
    margin-bottom: 32px;
    color: var(--color-text);
  }

  .customer-form__field {
    margin-bottom: 20px;
  }

  .customer-form__label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 8px;
    color: var(--color-text);
  }

  .customer-form__input {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-family: inherit;
    transition: border-color var(--transition-fast);
  }

  .customer-form__input:focus {
    outline: none;
    border-color: var(--color-gold);
  }

  .customer-form__submit {
    width: 100%;
    padding: 16px;
    margin-top: 8px;
  }

  .customer-form__footer {
    text-align: center;
    margin-top: 24px;
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
  }

  .customer-form__footer a {
    color: var(--color-gold);
    text-decoration: none;
    font-weight: 500;
  }

  .customer-form__footer a:hover {
    text-decoration: underline;
  }

  .customer-form__errors {
    padding: 12px 16px;
    margin-bottom: 20px;
    background: #fef2f2;
    border: 1px solid #fee2e2;
    border-radius: var(--radius-md);
    color: #dc2626;
    font-size: 0.875rem;
  }

  .customer-form__row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
  }

  @media (max-width: 480px) {
    .customer-form__row {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<section class="customer-section">
  <div class="customer-form" data-animate>
    <h1 class="customer-form__title">{{ 'customer.register.title' | t }}</h1>

    {%- form 'create_customer', novalidate: 'novalidate' -%}
      {%- if form.errors -%}
        <div class="customer-form__errors">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div class="customer-form__row">
        <div class="customer-form__field">
          <label class="customer-form__label" for="RegisterFirstName">
            {{ 'customer.register.first_name' | t }}
          </label>
          <input
            type="text"
            name="customer[first_name]"
            id="RegisterFirstName"
            class="customer-form__input"
            autocomplete="given-name"
          >
        </div>

        <div class="customer-form__field">
          <label class="customer-form__label" for="RegisterLastName">
            {{ 'customer.register.last_name' | t }}
          </label>
          <input
            type="text"
            name="customer[last_name]"
            id="RegisterLastName"
            class="customer-form__input"
            autocomplete="family-name"
          >
        </div>
      </div>

      <div class="customer-form__field">
        <label class="customer-form__label" for="RegisterEmail">
          {{ 'customer.register.email' | t }}
        </label>
        <input
          type="email"
          name="customer[email]"
          id="RegisterEmail"
          class="customer-form__input"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          required
        >
      </div>

      <div class="customer-form__field">
        <label class="customer-form__label" for="RegisterPassword">
          {{ 'customer.register.password' | t }}
        </label>
        <input
          type="password"
          name="customer[password]"
          id="RegisterPassword"
          class="customer-form__input"
          autocomplete="new-password"
          required
        >
      </div>

      <button type="submit" class="btn btn--primary customer-form__submit">
        {{ 'customer.register.submit' | t }}
      </button>

      <div class="customer-form__footer">
        <span>Already have an account?</span>
        <a href="{{ routes.account_login_url }}">Sign in</a>
      </div>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Customer Register",
  "settings": []
}
{% endschema %}

