{% comment %}
  Angel Hair Theme - Hero Banner Section
{% endcomment %}

<style>
  .hero {
    position: relative;
    min-height: {{ section.settings.height }}vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: var(--color-cream);
  }

  .hero__media {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      {{ section.settings.overlay_direction }},
      rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }}) 0%,
      rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 200.0 }}) 100%
    );
    z-index: 2;
  }

  .hero__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: var(--spacing-xl);
    text-align: {{ section.settings.text_align }};
  }

  @media (min-width: 769px) {
    .hero__content {
      max-width: {{ section.settings.content_width }}%;
      {%- if section.settings.text_align == 'left' -%}
        margin-left: var(--spacing-xl);
        margin-right: auto;
      {%- elsif section.settings.text_align == 'right' -%}
        margin-left: auto;
        margin-right: var(--spacing-xl);
      {%- endif -%}
    }
  }

  .hero__subtitle {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-gold);
    margin-bottom: var(--spacing-md);
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.2s forwards;
  }

  .hero--light .hero__subtitle {
    color: var(--color-gold-light);
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    line-height: 1.1;
    margin-bottom: var(--spacing-md);
    color: {{ section.settings.text_color }};
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.4s forwards;
  }

  .hero__description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    opacity: 0.9;
    margin-bottom: var(--spacing-lg);
    max-width: 600px;
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.6s forwards;
    {%- if section.settings.text_align == 'center' -%}
      margin-left: auto;
      margin-right: auto;
    {%- endif -%}
  }

  .hero__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.8s forwards;
    {%- if section.settings.text_align == 'center' -%}
      justify-content: center;
    {%- elsif section.settings.text_align == 'right' -%}
      justify-content: flex-end;
    {%- endif -%}
  }

  @media (max-width: 640px) {
    .hero__buttons {
      flex-direction: column;
    }
    
    .hero__buttons .button {
      width: 100%;
    }
  }

  .hero__scroll {
    position: absolute;
    bottom: var(--spacing-lg);
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    color: {{ section.settings.text_color }};
    animation: bounce 2s ease infinite;
    opacity: 0.7;
  }

  .hero__scroll svg {
    width: 32px;
    height: 32px;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  /* Video Background */
  .hero__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Split Layout */
  .hero--split {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  @media (max-width: 768px) {
    .hero--split {
      grid-template-columns: 1fr;
    }
  }

  .hero--split .hero__media {
    position: relative;
    min-height: 50vh;
  }

  .hero--split .hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: var(--spacing-xxl);
    background: var(--color-cream);
  }

  /* Decorative Elements */
  .hero__decoration {
    position: absolute;
    z-index: 2;
    pointer-events: none;
  }

  .hero__decoration--corner {
    width: 100px;
    height: 100px;
    border: 2px solid var(--color-gold);
    opacity: 0.5;
  }

  .hero__decoration--top-left {
    top: var(--spacing-lg);
    left: var(--spacing-lg);
    border-right: none;
    border-bottom: none;
  }

  .hero__decoration--bottom-right {
    bottom: var(--spacing-lg);
    right: var(--spacing-lg);
    border-left: none;
    border-top: none;
  }
</style>

<section class="hero hero--{{ section.settings.layout }}" data-section-id="{{ section.id }}">
  {%- if section.settings.layout != 'split' -%}
    <div class="hero__media">
      {%- if section.settings.video != blank -%}
        {{ section.settings.video | video_tag: 
          autoplay: true, 
          loop: true, 
          muted: true, 
          playsinline: true,
          class: 'hero__video'
        }}
      {%- elsif section.settings.image != blank -%}
        <img 
          src="{{ section.settings.image | image_url: width: 1920 }}"
          srcset="{{ section.settings.image | image_url: width: 768 }} 768w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w,
                  {{ section.settings.image | image_url: width: 1920 }} 1920w"
          sizes="100vw"
          alt="{{ section.settings.image.alt | default: section.settings.title | escape }}"
          class="hero__image"
          loading="eager"
        >
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'hero__image placeholder' }}
      {%- endif -%}
      <div class="hero__overlay"></div>
    </div>
  {%- endif -%}

  {%- if section.settings.layout == 'split' -%}
    <div class="hero__media">
      {%- if section.settings.image != blank -%}
        <img 
          src="{{ section.settings.image | image_url: width: 1200 }}"
          alt="{{ section.settings.image.alt | default: section.settings.title | escape }}"
          class="hero__image"
          loading="eager"
        >
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'hero__image placeholder' }}
      {%- endif -%}
    </div>
  {%- endif -%}

  <div class="hero__content">
    {%- if section.settings.subtitle != blank -%}
      <span class="hero__subtitle">{{ section.settings.subtitle }}</span>
    {%- endif -%}
    
    {%- if section.settings.title != blank -%}
      <h1 class="hero__title">{{ section.settings.title }}</h1>
    {%- endif -%}
    
    {%- if section.settings.description != blank -%}
      <p class="hero__description">{{ section.settings.description }}</p>
    {%- endif -%}

    <div class="hero__buttons">
      {%- if section.settings.button_1_label != blank -%}
        <a href="{{ section.settings.button_1_link }}" class="button button--primary button--large">
          {{ section.settings.button_1_label }}
        </a>
      {%- endif -%}
      
      {%- if section.settings.button_2_label != blank -%}
        <a href="{{ section.settings.button_2_link }}" class="button button--{{ section.settings.button_2_style }} button--large">
          {{ section.settings.button_2_label }}
        </a>
      {%- endif -%}
    </div>
  </div>

  {%- if section.settings.show_scroll_indicator -%}
    <a href="#main-content" class="hero__scroll" aria-label="Scroll down">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M7 13l5 5 5-5M7 6l5 5 5-5"/>
      </svg>
    </a>
  {%- endif -%}

  {%- if section.settings.show_decorations -%}
    <div class="hero__decoration hero__decoration--corner hero__decoration--top-left"></div>
    <div class="hero__decoration hero__decoration--corner hero__decoration--bottom-right"></div>
  {%- endif -%}
</section>

{% schema %}
