  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "title": "Transform Your Hair",
        "subtitle": "Premium Hair Care",
        "description": "Discover our professional-grade hair care products enriched with amino acids and natural extracts."
      }
    }
  ]
}
