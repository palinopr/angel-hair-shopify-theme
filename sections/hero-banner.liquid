        { "value": "to top", "label": "Bottom to Top" },
        { "value": "to right", "label": "Left to Right" }
      ],
      "default": "to bottom"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Premium Hair Care"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Transform Your Hair"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
