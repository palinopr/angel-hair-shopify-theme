  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "full", "label": "Full Width" },
        { "value": "split", "label": "Split (Image + Content)" }
      ],
      "default": "full"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 90,
      "unit": "vh"
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content Width",
      "min": 40,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background Video"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 30,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "overlay_direction",
