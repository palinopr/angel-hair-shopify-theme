      "id": "button_2_label",
      "label": "Button 2 Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "select",
      "id": "button_2_style",
      "label": "Button 2 Style",
      "options": [
