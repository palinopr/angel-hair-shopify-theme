{%- style -%}
  .addresses-section {
    padding: 60px 0;
    min-height: 60vh;
  }

  .addresses-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .addresses-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
  }

  .addresses-header__title {
    font-family: var(--font-heading-family);
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
  }

  .addresses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 24px;
  }

  .address-card {
    padding: 24px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: white;
  }

  .address-card--default {
    border-color: var(--color-gold);
  }

  .address-card__badge {
    display: inline-block;
    padding: 4px 12px;
    background: var(--color-gold);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--radius-full);
    margin-bottom: 12px;
  }

  .address-card__content {
    margin-bottom: 16px;
    line-height: 1.6;
    color: var(--color-text);
  }

  .address-card__actions {
    display: flex;
    gap: 12px;
    font-size: 0.875rem;
  }

  .address-card__actions a,
  .address-card__actions button {
    color: var(--color-gold);
    text-decoration: none;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    font-size: inherit;
  }

  .address-card__actions a:hover,
  .address-card__actions button:hover {
    text-decoration: underline;
  }

  .no-addresses {
    text-align: center;
    padding: 60px 20px;
    color: var(--color-text-light);
  }
{%- endstyle -%}

<section class="addresses-section">
  <div class="addresses-container" data-animate>
    <header class="addresses-header">
      <h1 class="addresses-header__title">{{ 'customer.addresses.title' | t }}</h1>
      <a href="{{ routes.account_url }}" class="btn btn--outline btn--small">
        Back to Account
      </a>
    </header>

    {%- if customer.addresses.size > 0 -%}
      <div class="addresses-grid">
        {%- for address in customer.addresses -%}
          <div class="address-card {% if address == customer.default_address %}address-card--default{% endif %}">
            {%- if address == customer.default_address -%}
              <span class="address-card__badge">{{ 'customer.addresses.default' | t }}</span>
            {%- endif -%}

            <div class="address-card__content">
              {{ address | format_address }}
            </div>

            <div class="address-card__actions">
              <a href="{{ routes.account_addresses_url }}/{{ address.id }}">
                {{ 'customer.addresses.edit' | t }}
              </a>
              <button
                type="button"
                onclick="Shopify.CustomerAddress.destroy({{ address.id }}, '{{ 'customer.addresses.delete_confirm' | t }}')"
              >
                {{ 'customer.addresses.delete' | t }}
              </button>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- else -%}
      <p class="no-addresses">You haven't saved any addresses yet.</p>
    {%- endif -%}

    <div style="text-align: center; margin-top: 40px;">
      <a href="{{ routes.account_addresses_url }}/new" class="btn btn--primary">
        {{ 'customer.addresses.add_new' | t }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer Addresses",
  "settings": []
}
{% endschema %}

